<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>de.larmic</groupId>
	<artifactId>larmic-components</artifactId>
	<version>0.0.6</version>
	<packaging>pom</packaging>

	<name>larmic-components</name>
	<url>http://components.larmic.de</url>

	<modules>
		<module>jsf2-components</module>
		<module>jsf2-components-showcase</module>
	</modules>

	<distributionManagement>
		<repository>
			<id>repository.local</id>
			<url>file:///Users/larmic/Work/larmic/maven-artifacts</url>
		</repository>
	</distributionManagement>

	<licenses>
		<license>
			<name>MIT license</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git@bitbucket.org:larmicBB/larmic-jsf2-components.git</connection>
		<url>scm:git:git@bitbucket.org:larmicBB/larmic-jsf2-components.git</url>
		<developerConnection>scm:git:git@bitbucket.org:larmicBB/larmic-jsf2-components.git</developerConnection>
		<tag>larmic-components-0.0.6</tag>
	</scm>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
				    <!-- goals>deploy</goals-->
				    <autoversionsubmodules>true</autoversionsubmodules>
				  </configuration>
			</plugin>
			<plugin>
				<groupId>org.glassfish</groupId>
				<artifactId>maven-embedded-glassfish-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<goalPrefix>glassfish</goalPrefix>
					<port>8080</port>
					<contextRoot>${artifactId}</contextRoot>
					<components>
						<component>
							<name>${artifactId}</name>
							<artifact>target/${project.build.finalName}</artifact>
						</component>
					</components>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<properties>
		<default.encoding>UTF-8</default.encoding>
		<project.build.sourceEncoding>${default.encoding}</project.build.sourceEncoding>
		<maven.version>3.0.0</maven.version>
		<maven.compiler.source>1.7</maven.compiler.source>
		<maven.compiler.target>1.7</maven.compiler.target>

		<javax.javaee-api.version>7.0</javax.javaee-api.version>
		<jsf.version>2.2.0-m15</jsf.version>
		<!-- https://repository.jboss.org/nexus/content/groups/public-jboss/org/richfaces/richfaces-bom/ -->
		<org.richfaces.bom.version>4.3.2.Final</org.richfaces.bom.version>
	</properties>

	<dependencyManagement>
		<dependencies>
	        <dependency>
	            <groupId>javax</groupId>
	            <artifactId>javaee-api</artifactId>
	            <version>${javax.javaee-api.version}</version>
	            <scope>provided</scope>
	        </dependency>
			<dependency>
				<groupId>com.sun.faces</groupId>
				<artifactId>jsf-impl</artifactId>
				<version>${jsf.version}</version>
				<scope>provided</scope>
			</dependency>
			<dependency>
				<groupId>de.larmic</groupId>
				<artifactId>jsf2-components</artifactId>
				<version>${project.version}</version>
			</dependency>
	    </dependencies>
    </dependencyManagement>
</project>
